<div class="contenido-superior vacante contenedor">
  <div class="caja">
    <p class="etiqueta">Empresa</p>
    <p class="nombre">{{vacante.empresa}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Ubicaci贸n</p>
    <p class="nombre">{{vacante.ubicacion}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Contrato</p>
    <p class="nombre contrato">{{vacante.contrato}}</p>
  </div>
  <div class="caja">
    <p class="etiqueta">Salario</p>
    <p class="nombre contrato">$ {{vacante.salario}}</p>
  </div>
</div>

<div class="vacante-contenedor contenedor">
  <main class="contenido">
    <h2>Descripci贸n del Puesto</h2>
    <div class="vacante-descripcion">
      {{{vacante.descripcion}}}
    </div>

    <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn">Editar Vacante</a>
  </main>
  <aside class="sidebar">
    <h2>Conocimientos Deseados</h2>
    <ul class="skills">
      {{#each vacante.skills}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  </aside>
</div>

<div class="contenedor datos-reclutador">
  <div class="enviar-datos">
    <h2>Contactar Reclutador</h2>
    <p>Llena el siguiente formulario, sube tu curriculum u hoja de vida y pronto te contactaremos</p>
    <form method="POST" action="/vacantes/{{vacante.url}}" class="default-form" enctype="multipart/form-data">
      <div class="campo">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" id="nombre" placeholder="Tu nombre">
      </div>
      <div class="campo">
        <label for="email">Correo</label>
        <input type="text" name="email" id="email" placeholder="Tu Correo Electr贸nico">
      </div>
      <div class="campo">
        <label for="cv">CV (PDF)</label>
        <input type="file" name="cv" id="cv">
      </div>
      <div class="campo">
        <input type="submit" value="Enviar" class="btn btn-verde">
      </div>
    </form>
  </div>
  <div class="info-reclutador">
    <h2>Informaci贸n Reclutador</h2>
    {{#if vacante.autor.nombre}}
      <p>{{vacante.autor.nombre}}</p>
    {{/if}}
    {{#if vacante.autor.imagen}}
      <img src="/uploads/perfiles/{{vacante.autor.imagen}}" alt="{{vacante.autor.nombre}}">
      <p></p>
    {{/if}}
  </div>
</div>
