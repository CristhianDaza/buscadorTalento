<main class="contenedor">
  <form action="/iniciar-sesion" method="POST" class="default-form">
    <div class="campo">
      <label for="email">Correo Electrónico</label>
      <input type="email" name="email" id="email" placeholder="Tu correo electrónico" required>
    </div>
    <div class="campo">
      <label for="password">Contraseña</label>
      <input type="password" name="password" id="password" placeholder="Tu contraseña" required>
    </div>
    <div class="campo acciones">
      <a href="/crear-cuenta">Crea una Cuenta</a>
      <a href="/reestablecer-password">Olvidé mi contraseña</a>
    </div>
    <div class="campo">
      <input type="submit" value="Iniciar Sesión" class="btn btn-azul">
    </div>
  </form>
</main>
